<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ececec">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#387ace">
        <ImageView
            android:id="@+id/setting_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/touxiang"
            />
        <TextView
            android:id="@+id/line_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:textColor="#ffffff"
            android:text="在线"
            android:layout_marginTop="5dp" />
        <TextView
            android:id="@+id/setting_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1236456456"
            android:textColor="#ffffff"
            android:layout_toRightOf="@id/setting_image"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="10sp"
            android:textSize="16sp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/setting_image"
            android:layout_below="@id/setting_user_id"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10sp">
            <TextView
                android:id="@+id/setting_user_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号：123456789"
                android:textColor="#9fcaff"
                android:textSize="12sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/system_msg_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/system_msg_selector"
                />
            <ImageView
                android:id="@+id/my_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/my_picture_selector"
                android:layout_toRightOf="@id/system_msg_image" />
        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/app_update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/list_item_color_bg">
            <ImageView
                android:id="@+id/app_update_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/version_update"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                />

            <TextView
                android:layout_toRightOf="@id/app_update_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本更新"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/right_braw"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gray"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_help_about"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/list_item_color_bg">
            <ImageView
                android:id="@+id/rela_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/about"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                />

            <TextView
                android:layout_toRightOf="@id/rela_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/right_braw"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_help_exit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/list_item_color_bg"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/rela_image2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/exit"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                />

            <TextView
                android:layout_toRightOf="@id/rela_image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exit"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/right_braw"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>