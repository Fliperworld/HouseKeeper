<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
	<ImageView
        android:layout_width="match_parent"
        android:layout_height="570dp"
		android:background="@mipmap/add_camera_3"
        />
    
    <TextView 
        android:id="@+id/camera_wifi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="125dp"
        android:textColor="@color/wifi_change_color"
        android:layout_marginRight="40dp"
        android:textSize="16sp"
        android:text="@string/change_wifi"
        />
    
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/edit_view"
        >
        <EditText 
	        android:id="@+id/camera_wifi_pwd"
	        android:layout_width="230dp"
	        android:layout_height="40dp"
	        android:layout_centerInParent="true"
	        android:background="@null"
	        android:hint="输入wifi密码"
        />
    </RelativeLayout>
	 
    <Button 
        android:id="@+id/next_add_camera_second_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/next"
        />
</RelativeLayout>